<%= form_with(model: obj, remote: true, url: obj.new_record? ? students_path : student_path(obj), class: "styled-form") do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :subject_name, "Subject", class: "form-label" %>
    <%= form.text_field :subject_name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :marks, "Mark", class: "form-label" %>
    <%= form.number_field :marks, class: "form-input" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Add", class: "btn-submit" %>
  </div>
<% end %>

<%= link_to 'Back', students_path, class: "back-link" %>
