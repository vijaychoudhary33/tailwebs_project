<!-- app/views/devise/sessions/new.html.erb -->
<div style="text-align: center;">
  <div>
    <h1 style="font-size: 3rem; color: #ff0000; margin-bottom: 30px;">tailwebs.</h1>
  </div>

  <div style="background-color: white; padding: 40px; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); width: 350px; margin: auto;">
    <h2 style="font-size: 1.5rem; margin-bottom: 20px; color: #333;">Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div style="margin-bottom: 20px;">
        <%= f.label :username, style: 'display: block; text-align: left; margin-bottom: 5px; font-size: 0.9rem; color: #333;' %>
        <div style="display: flex; align-items: center; border: 1px solid #ccc; border-radius: 5px; padding: 10px;">
          <i style="font-size: 1rem; margin-right: 10px;">ðŸ”‘</i>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", style: 'width: 100%; border: none; outline: none; padding-left: 10px;' %>
        </div>
      </div>

      <div style="margin-bottom: 20px;">
        <%= f.label :password, style: 'display: block; text-align: left; margin-bottom: 5px; font-size: 0.9rem; color: #333;' %>
        <div style="display: flex; align-items: center; border: 1px solid #ccc; border-radius: 5px; padding: 10px;">
          <i style="font-size: 1rem; margin-right: 10px;">ðŸ”’</i>
          <%= f.password_field :password, autocomplete: "current-password", style: 'width: 100%; border: none; outline: none; padding-left: 10px;' %>
        </div>
      </div>

      <div style="text-align: right; margin-top: -10px; margin-bottom: 20px;">
        <%= link_to "Forgot Password?", new_password_path(resource_name), style: 'color: #1E90FF; text-decoration: none; font-size: 0.85rem;' %>
      </div>

      <div>
        <%= f.submit "Login", style: 'background-color: black; color: white; border: none; width: 100%; padding: 10px; border-radius: 5px; font-size: 1rem; cursor: pointer;' %>
      </div>
    <% end %>
  </div>
</div>
